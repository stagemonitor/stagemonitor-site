---
title: stagemonitor
---

<!-- Homepage Hero
================================================== -->
<section id="hero" class="jumbotron">
	<div class="container" id="hero-body">
		<div class="row">
			<div class="row hidden-xs">
				<a href="https://github.com/stagemonitor/stagemonitor">
					<img style="position: absolute; top: 54px; right: 0; border: 0;"
						 src="https://camo.githubusercontent.com/38ef81f8aca64bb9a64448d0d70f1308ef5341ab/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67"
						 alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png">
				</a>
			</div>
		</div>
		<div id="hero-content" class="row">
			<div class="col-lg-12">
				<div class="hero-text">
					<img src="/images/stagemonitor-logo-light-big.png" class="img-responsive center-block"/>
					<br>
					<h2><%= I18n.t(:"stagemonitor-slogan") %></h2>
					<p><%= I18n.t(:"stagemonitor-description") %></p>
				</div>
				<div class="buttons">
					<a class="btn btn-success btn-lg" href="https://github.com/stagemonitor/stagemonitor"><%= I18n.t(:"button-github") %>
						<i class="fa fa-github-alt"></i></a>
					<a class="btn btn-primary btn-lg" href="https://github.com/stagemonitor/stagemonitor/wiki/Installation"><%= I18n.t(:"button-get-started") %></a>
				</div>
			</div>
		</div>
		<div class="row bottom">
			<p class="scrolldown">
				<a class="btn btn-circle page-scroll smoothscroll" href="#overview">
					<i class="fa fa-angle-double-down"></i>
				</a>
			</p>
		</div>
	</div>
</section> <!-- Homepage Hero end -->
<section id="overview" class="overview">
  <div class="container">
    <% data.overview_elements.each do |overview_element| %>
        <div class="row">
          <% overview_element.items.each do |item| %>
              <div class="col-md-4">
                <div class="col-md-3">
                  <% if item.detail_link? %>
                      <a href="<%= item.detail_link %>" target="_blank"><i class="fa <%= item.icon %> big-fa fa-5x"></i></a>
                  <% else %>
                      <i class="fa <%= item.icon %> big-fa fa-5x"></i>
                  <% end %>
                </div>
                <div class="col-md-9">
                  <% if item.detail_link? %>
                      <a href="<%= item.detail_link %>" target="_blank"><h2><%= I18n.t(:"#{item.icon}-headline") %></h2></a>
                  <% else %>
                      <h2><%= I18n.t(:"#{item.icon}-headline") %></h2>
                  <% end %>
                  <p><%= I18n.t(:"#{item.icon}-description") %></p>
                </div>
              </div>
          <% end %>
        </div>
    <% end %>
  </div>
</section>

<section id="features">
	<% data.feature_categories.each do |category| %>
		<section id="<%= category.id %>" class="feature-overview">
			<div class="container">

				<div class="row">
					<div class="col-lg-2">
						<i class="fa <%= category.icon %> big-fa fa-5x"></i>
					</div>
					<div class="col-lg-8">
						<h2><%= I18n.t(:"#{category.id}-name") %></h2>
						<% unless I18n.t(:"#{category.id}-short_description").nil? %>
							<p class="feature-short-desc"><%= I18n.t(:"#{category.id}-short_description") %></p>
						<% end %>
						<p><%= I18n.t(:"#{category.id}-description") %></p>
					</div>
					<div class="col-lg-2">
						<% unless category.live_demo_url.nil? %>
							<a class="btn btn-lg btn-primary live-demo" target="_blank" href="<%= category.live_demo_url %>">Live
								Demo</a>
						<% end %>

						<% unless category.info_url.nil? %>
							<a class="btn btn-lg btn-primary live-demo" target="_blank" href="<%= category.info_url %>"><%= I18n.t(:"button-more-info") %></a>
						<% end %>
					</div>
				</div>
			</div>
		</section>
		<section class="features content">
			<div class="container">

          <% category.features.each_with_index do |feature, index| %>
              <div class="row featurette">
                <div class="col-md-6
                  <% if index.even? %> pull-right
                  <% end %>">
                  <h3 class="featurette-heading"><%= I18n.t(:"#{feature.id}-name") %></h3>

                  <p><%= I18n.t(:"#{feature.id}-description") %></p>
                </div>

                <div class="col-md-6">
                  <div class="columns item">
                    <div class="item-wrap">
                      <a href="<%= feature.image %>" class="img-responsive" data-imagelightbox="a">
                        <img src="<%= feature.image %>" alt="<%= I18n.t(:"#{feature.id}-image_title") %>">

                        <div class="overlay"></div>
                        <div class="link-icon"><i class="fa fa-plus"></i></div>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
              <% unless index == category.features.size - 1 %>
                  <hr class="featurette-divider">
              <% end %>
          <% end %>

        </div>
      </section>
  <% end %>
</section>

<section id="support">
  <div class="container">
    <% data.support_elements.each do |support_element| %>
        <div class="row">
          <div class="col-md-12 col-xs-12">
						<% unless support_element.headline.nil? %>
            	<h1><%= I18n.t(support_element.headline) %> <i class="fa <%= support_element.header_icon %>"></i></h1>
						<% end %>
            <h2><%= I18n.t(support_element.header_label) %></h2>
            <p><%= I18n.t(support_element.support_description) %></p>
          </div>
        </div>

				<% support_element.feature_list.each do |feature_list| %>
            <% if feature_list.features.length %>
            <div class="row ">
              <% feature_list.features.each do |item| %>
                  <div class="col-md-4 clearfix">
                    <div class="col-md-3">
                      <% if item.detail_link? %>
                          <a href="<%= item.detail_link %>" target="_blank"><i class="fa <%= item.icon %> support-fa text-center fa-5x fix-width-fa"></i></a>
                      <% else %>
                          <i class="fa <%= item.icon %> support-fa text-center fa-5x fix-width-fa"></i>
                      <% end %>
                    </div>
                    <div class="col-md-9">
                      <% if item.detail_link? %>
                          <a href="<%= item.detail_link %>" target="_blank"><h2><%= I18n.t(item.headline) %></h2></a>
                      <% else %>
                          <h2 class="distance-top"><%= I18n.t(item.headline) %></h2>
                      <% end %>
                      <% unless support_element.headline.nil? %>
                        <p><%= I18n.t(item.description) %></p>
                      <% end %>
                    </div>
                  </div>
              <% end %>
            </div>
            <% end %>
        <% end %>
    <% end %>
  </div>
</section>


